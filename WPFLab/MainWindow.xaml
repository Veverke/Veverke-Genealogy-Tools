<Window x:Class="WPFLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" BorderBrush="Gold"  Background="SkyBlue">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open GEDCOM File" Click="btnOpenFiles_Click"/>
                <MenuItem Header="Export to JSON" Click="btnExportToJson_Click"/>
            </MenuItem>
            <MenuItem Header="Statistics">
                <MenuItem Header="Geographic Distribution" Click="btnShowGeographicDistribution_Click" />
                <MenuItem Header="Individuals Per Surname" Click="btnShowSurmames_Click"/>
                <MenuItem Header="Deaths Per Cause" Click="btnShowCausesOfDeathDistribution_Click"/>
            </MenuItem>
        </Menu>
        <ScrollViewer>
            <StackPanel DockPanel.Dock="Bottom">
                <TreeView Name="treeView"></TreeView>
                <ListView Height="200" Name="listView">
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
