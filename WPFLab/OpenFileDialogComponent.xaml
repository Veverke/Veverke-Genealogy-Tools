<UserControl x:Class="WPFLab.OpenFileDialogComponent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="100">
    <DockPanel Margin="10">
        <Button DockPanel.Dock="Top"  Name="btnOpenFile" Click="btnOpenFiles_Click" BorderBrush="GhostWhite" BorderThickness="1" FontSize="10">Open file</Button>
        <ListBox DockPanel.Dock="Bottom" Name="lboxFiles" />
    </DockPanel>
</UserControl>